<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FourthFragment">

    <include layout="@layout/view_feed_toolbar"></include>

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tv_rlupdate_version"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_normal"
                android:text="版本更新"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/version_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <likeit.com.jingdong.view.BorderTextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="退出帐号"
                android:textColor="@color/white"
                app:contentBackColor="#CD031B"
                app:cornerRadius="@dimen/dp_5"
                app:strokeColor01="#CD031B"
                app:strokeWidth01="0dp"></likeit.com.jingdong.view.BorderTextView>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>